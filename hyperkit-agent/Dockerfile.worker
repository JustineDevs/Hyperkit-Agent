# Dockerfile for HyperKit AI Agent Celery Worker
# Production-ready Celery worker for async job processing

FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Foundry (Rust-based Solidity compiler)
RUN curl -L https://foundry.paradigm.xyz | bash
ENV PATH="/root/.foundry/bin:${PATH}"

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create non-root user
RUN useradd --create-home --shell /bin/bash hyperkit
RUN chown -R hyperkit:hyperkit /app
USER hyperkit

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD celery -A backend.jobs.celery inspect ping || exit 1

# Default command (can be overridden)
CMD ["celery", "-A", "backend.jobs.celery", "worker", "--loglevel=info", "--concurrency=4"]
