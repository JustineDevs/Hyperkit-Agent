# HyperAgent Environment Configuration
# Copy this file to .env and fill in your actual values
# Updated for v1.2.0 with IPFS Pinata RAG

# ============================================================================
# AI/LLM PROVIDER CONFIGURATION
# ============================================================================

# Google Gemini (Primary - Free $300 credits)
# Get from: https://aistudio.google.com/
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI (Secondary - Pay-per-use)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (Optional - Paid service)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alith SDK Configuration (AI Agent)
# PRIMARY: Gemini (via Alith SDK adapter) - uses GOOGLE_API_KEY above
# FALLBACK: Alith SDK (OpenAI) - uses OPENAI_API_KEY above
# NOTE: Gemini is PRIMARY - Alith SDK only used if Gemini unavailable
ALITH_ENABLED=true
# For Gemini (PRIMARY): GOOGLE_API_KEY required (see above)
# For Alith SDK (FALLBACK): OPENAI_API_KEY required (see above)

# ============================================================================
# FUTURE NETWORK SUPPORT
# ============================================================================
# LazAI and Metis network configurations are removed for Hyperion-only focus
# See ROADMAP.md for future multi-network support plans
# No network-specific keys required - Hyperion only

# ============================================================================
# BLOCKCHAIN NETWORK CONFIGURATION
# ============================================================================

# Default network for deployments
DEFAULT_NETWORK=hyperion

# Hyperion Testnet (Primary - Metis)
HYPERION_RPC_URL=https://hyperion-testnet.metisdevops.link
HYPERION_CHAIN_ID=133717
HYPERION_EXPLORER_URL=https://hyperion-testnet-explorer.metisdevops.link

# ============================================================================
# HYPERION-ONLY CONFIGURATION
# ============================================================================
# Future network support (LazAI, Metis) documented in ROADMAP.md only
# All deployments use Hyperion testnet exclusively
# Legacy network configs Hyperion-only mode

# ============================================================================
# WALLET CONFIGURATION - REQUIRED FOR CONTRACT OPERATIONS
# ============================================================================
# Private key for transaction signing and contract deployment
# Generate a test wallet: https://vanity-eth.tk/ | web3 wallet metamask
# WARNING: Use test wallets only for development!
# 
# For CI/CD: Use .env.ci template with throwaway test key
# For Production: Store in secure vault, never commit to VCS!
# ============================================================================
DEFAULT_PRIVATE_KEY=your_private_key_here
PRIVATE_KEY=your_private_key_here  # Legacy support

# ============================================================================
# IPFS STORAGE CONFIGURATION (Pinata) - REQUIRED FOR RAG
# ============================================================================

# Pinata IPFS API keys for decentralized storage (REQUIRED)
# Get from: https://app.pinata.cloud/
# Note: IPFS Pinata is now the exclusive RAG backend - no fallbacks
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
PINATA_TEMPLATE_ID=your_pinata_group_id_here
PINATA_COMMUNITY_ID=your_pinata_group_id_here
PINATA_TEAM_ID=your_pinata_group_id_here

# ============================================================================
# EXPLORER API KEYS (Optional - for contract verification)
# ============================================================================

# Block explorer API keys for contract verification (Hyperion-only)
HYPERION_EXPLORER_API_KEY=your_hyperion_explorer_api_key_here
# Note: Legacy explorer API keys (Metis, LazAI Network) removed - Hyperion-only mode

# ============================================================================
# LOGGING AND MONITORING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable structured logging
STRUCTURED_LOGGING=true

# Environment (development, staging, production)
ENVIRONMENT=development

# ============================================================================
# SECURITY EXTENSIONS (v1.2.0)
# ============================================================================

# Enable security extensions (transaction simulation, phishing detection)
SECURITY_EXTENSIONS_ENABLED=true

# Enable security scanning tools
SLITHER_ENABLED=true
MYTHRIL_ENABLED=true
EDB_ENABLED=true

# Rate limiting (requests per minute)
RATE_LIMIT=60

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================

# Gas price multiplier (1.0 = normal, 1.1 = 10% higher)
GAS_PRICE_MULTIPLIER=1.0

# Gas limit for deployments
DEPLOYMENT_GAS_LIMIT=8000000

# Confirmation blocks to wait
CONFIRMATION_BLOCKS=12

# Auto-verify contracts after deployment
AUTO_VERIFY=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug mode
DEBUG=false

# Enable verbose output
VERBOSE=true

# Test mode (use testnets only)
TEST_MODE=true

# Cache directory
CACHE_DIR=./cache

# ============================================================================
# ALITH SDK CONFIGURATION (v1.2.0)
# ============================================================================

# Alith SDK settings for AI-powered auditing
ALITH_ENABLED=true
ALITH_MODEL=gpt-4o-mini
ALITH_SETTLEMENT=true
ALITH_INFERENCE_NODE=https://inference.lazai.network
ALITH_PRIVATE_INFERENCE=true