# HyperKit AI Agent Configuration
# Environment variables and settings

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# Web3 Configuration
HYPERION_RPC_URL=https://hyperion-testnet.metisdevops.link
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Default Network
DEFAULT_NETWORK=hyperion

# Private Key for Deployment (use with caution)
DEFAULT_PRIVATE_KEY=your_private_key_here

# RAG Configuration
VECTORSTORE_PATH=./data/vectordb
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Security Tools
SLITHER_ENABLED=true
MYTHRIL_ENABLED=true
EDB_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/hyperkit-agent.log

# Database
REDIS_URL=redis://localhost:6379
DATABASE_URL=sqlite:///./hyperkit-agent.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
