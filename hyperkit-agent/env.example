# HyperKit AI Agent - Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# AI/LLM PROVIDER CONFIGURATION
# ============================================================================

# Google Gemini (Recommended - Free tier available)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI (Optional - Paid service)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (Optional - Paid service)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# DeepSeek (Optional - Free tier available)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# XAI Grok (Optional - Free tier available)
XAI_API_KEY=your_xai_api_key_here

# ============================================================================
# BLOCKCHAIN NETWORK CONFIGURATION
# ============================================================================

# Default network for deployments
DEFAULT_NETWORK=hyperion

# Hyperion Testnet (Metis)
HYPERION_RPC_URL=https://hyperion-testnet.metisdevops.link
HYPERION_CHAIN_ID=133717
HYPERION_EXPLORER_URL=https://hyperion-testnet-explorer.metisdevops.link

# Lazai Testnet
LAZAI_RPC_URL=https://rpc.lazai.network/testnet
LAZAI_CHAIN_ID=133717
LAZAI_EXPLORER_URL=https://explorer.lazai.network

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_CHAIN_ID=1
ETHEREUM_EXPLORER_URL=https://etherscan.io

# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137
POLYGON_EXPLORER_URL=https://polygonscan.com

# Arbitrum Mainnet
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_CHAIN_ID=42161
ARBITRUM_EXPLORER_URL=https://arbiscan.io

# Metis Andromeda
METIS_RPC_URL=https://andromeda.metis.io
METIS_CHAIN_ID=1088
METIS_EXPLORER_URL=https://andromeda-explorer.metis.io

# ============================================================================
# WALLET CONFIGURATION
# ============================================================================

# Private key for contract deployment (REQUIRED)
# Generate a new wallet for testing: https://www.myetherwallet.com/create-wallet
DEFAULT_PRIVATE_KEY=your_private_key_here

# ============================================================================
# EXPLORER API KEYS (Optional - for contract verification)
# ============================================================================

# Etherscan API keys for contract verification
ETHEREUM_EXPLORER_API_KEY=your_etherscan_api_key_here
POLYGON_EXPLORER_API_KEY=your_polygonscan_api_key_here
ARBITRUM_EXPLORER_API_KEY=your_arbiscan_api_key_here

# ============================================================================
# OBSIDIAN RAG CONFIGURATION (Optional)
# ============================================================================

# Obsidian vault path for RAG system
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# Obsidian API configuration (if using MCP Docker)
OBSIDIAN_MCP_API_KEY=your_obsidian_mcp_api_key_here
OBSIDIAN_API_URL=http://localhost:3000

# ============================================================================
# LOGGING AND MONITORING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable structured logging
STRUCTURED_LOGGING=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug mode
DEBUG=false

# Enable verbose output
VERBOSE=false

# Cache directory
CACHE_DIR=./cache

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Enable security scanning
ENABLE_SECURITY_SCAN=true

# Enable audit logging
ENABLE_AUDIT_LOG=true

# Rate limiting (requests per minute)
RATE_LIMIT=60

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================

# Gas price multiplier (1.0 = normal, 1.1 = 10% higher)
GAS_PRICE_MULTIPLIER=1.0

# Gas limit for deployments
DEPLOYMENT_GAS_LIMIT=5000000

# Confirmation blocks to wait
CONFIRMATION_BLOCKS=12

# ============================================================================
# MCP DOCKER CONFIGURATION (Optional)
# ============================================================================

# Enable MCP Docker integration
MCP_ENABLED=false

# MCP Docker host
MCP_DOCKER_HOST=host.docker.internal

# MCP Docker port
MCP_DOCKER_PORT=3000