# HyperKit AI Agent Configuration
# Environment variables and settings

# AI Provider API Keys (Cloud-Based Only)
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Disabled Providers (Not Used)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# DASHSCOPE_API_KEY=your_dashscope_api_key_here
# DEEPSEEK_API_KEY=your_deepseek_api_key_here
# XAI_API_KEY=your_xai_api_key_here
# Local models (GPT-OSS, LM Studio) - Removed for cloud-based architecture

# Web3 Configuration - HYPERION TESTNET FOCUS ONLY
# Hyperion Testnet (Primary - No API key required - public access)
HYPERION_RPC_URL=https://hyperion-testnet.metisdevops.link
HYPERION_CHAIN_ID=133717
HYPERION_EXPLORER_URL=https://hyperion-testnet-explorer.metisdevops.link

# Other Networks (Temporarily Disabled - Focus on Hyperion)
# METIS_RPC_URL=https://andromeda.metis.io
# METIS_CHAIN_ID=1088
# METIS_EXPLORER_URL=https://andromeda-explorer.metis.io

# LAZAI_RPC_URL=https://rpc.lazai.network/testnet
# LAZAI_CHAIN_ID=9001
# LAZAI_EXPLORER_URL=https://testnet-explorer.lazai.network

# POLYGON_RPC_URL=https://polygon-rpc.com
# ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Default Network - HYPERION ONLY
DEFAULT_NETWORK=hyperion

# Private Key for Deployment (use with caution)
DEFAULT_PRIVATE_KEY=your_private_key_here

# RAG Configuration
VECTORSTORE_PATH=./data/vectordb
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Simple MCP Integration (Direct Obsidian API)
MCP_ENABLED=true
OBSIDIAN_API_KEY=your_obsidian_api_key_here
OBSIDIAN_API_URL=http://localhost:27124
OBSIDIAN_HOST=host.docker.internal

# LangChain Configuration (Removed - using simple MCP instead)

# Security Tools
SLITHER_ENABLED=true
MYTHRIL_ENABLED=true
EDB_ENABLED=true

# Logging
LOG_LEVEL=INFO

# API Testing (Optional)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=hyperkit-agent
LANGSMITH_TRACING=true
LOG_FILE=./logs/hyperkit-agent.log

# Database
REDIS_URL=redis://localhost:6379
DATABASE_URL=sqlite:///./hyperkit-agent.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
